{
  "name": "cra-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@packages/api": "^1.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "^7.1.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject",
    "lint:sass": "stylelint './src/sass/**/*.scss'",
    "lint:ts": "eslint --fix --max-warnings 0 './src/**/*.{ts,tsx}'"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": false,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": false
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,scss}": [
      "prettier --write",
      "yarn lint:sass",
      "yarn lint:ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged --verbose",
      "pre-push": "yarn lint-staged --verbose"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^5.6.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-webpack-plugin": "^2.1.0"
  }
}
