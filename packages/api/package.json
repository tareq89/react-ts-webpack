{
  "name": "@packages/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "i": "yarn install --pure-lockfile",
    "lint:ts": "eslint --fix --max-warnings 0 './src/**/*.{ts,tsx}'",
    "lint": "yarn lint-staged"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": false,
    "useTabs": false,
