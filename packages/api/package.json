{
  "name": "@packages/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "i": "yarn install --pure-lockfile",
    "lint:ts": "eslint --fix --max-warnings 0 './src/**/*.{ts}'",
    "lint": "yarn lint-staged"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": false,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": false
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "prettier --write",
      "yarn lint:ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
